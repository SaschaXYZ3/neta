$TTL    86400
@       IN      SOA     ns1.{{ domain }}. admin.{{ domain }}. (
                            1         ; Serial
                            604800    ; Refresh
                            86400     ; Retry
                            2419200   ; Expire
                            86400 )   ; Negative Cache TTL

; Nameserver
@       IN      NS      ns1.{{ domain }}.

; PTR record for the nameserver
{{ nameserver_ip.split('.')[3] }}     IN      PTR     ns1.{{ domain }}.

