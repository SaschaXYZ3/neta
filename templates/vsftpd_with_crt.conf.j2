# /etc/vsftpd.conf

#list only on IPv4
listen=YES
listen_ipv6=NO

#allow users to upload
write_enable=YES

#disable anonymous logins
anonymous_enable=NO
local_enable=YES

#set directory with permissions
local_root=/var/www
chroot_local_user=YES
allow_writeable_chroot=YES

#passive mode
port_enable=YES
pasv_enable=YES
pasv_min_port=40000
pasv_max_port=50000

# Use our server's public IP address
pasv_address={{ external_gw_ip }}

#SSL config
ssl_enable=YES
allow_anon_ssl=NO
force_local_data_ssl=YES
force_local_logins_ssl=YES
ssl_tlsv1=YES
ssl_sslv2=NO
ssl_sslv3=NO
require_ssl_reuse=NO
ssl_ciphers=HIGH
rsa_cert_file=/etc/ssl/private/vsftpd.crt
rsa_private_key_file=/etc/ssl/private/vsftpd.key

